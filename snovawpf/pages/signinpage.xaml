      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:snovawpf.pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="signinpage">

    <Grid Background="#d49a53">
        <TextBlock HorizontalAlignment="Left" Margin="388,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="230" FontFamily="Franklin Gothic Heavy" FontSize="24"><Run Language="ru-ru" Text="Добро пожаловать!"/></TextBlock>
        <Image Source="/content/tk334.png" Margin="428,115,422,401" />
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Margin="388,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="388,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="15" Width="100" FontFamily="Franklin Gothic Book" FontSize="14"><Run Language="ru-ru" Text="Ваш никнейм"/></TextBlock>
